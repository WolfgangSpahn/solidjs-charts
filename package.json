    "@testing-library/jest-dom": "^6.8.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^1.0.0",
    "chart.js": "^4.4.0",
    "eslint": "^8.0.0",
    "eslint-plugin-solid": "^0.13.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.0.0",
    "solid-js": "^1.8.5",
    "typescript": "^5.0.0",
