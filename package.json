{
  "name": "solidjs-charts",
  "version": "1.0.0",
  "description": "SolidJS component wrapper for Chart.js",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "test": "vitest",
