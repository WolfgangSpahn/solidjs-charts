{
  "name": "@wolfgangspahn/solidjs-charts",
  "version": "1.0.0",
  "description": "A reactive SolidJS component wrapper for Chart.js with TypeScript support. Create beautiful, interactive charts with line, bar, pie, doughnut, scatter, bubble, and radar chart types.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run test:run && npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "solidjs",
    "charts",
    "chart.js",
    "chartjs",
    "data-visualization",
    "typescript",
    "reactive",
    "components",
    "line-chart",
    "bar-chart",
    "pie-chart",
    "scatter-plot",
    "bubble-chart",
    "radar-chart",
    "doughnut-chart"
  ],
  "author": "Wolfgang Spahn <wolfgang.spahn@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wolfgangspahn/solidjs-charts.git"
  },
  "homepage": "https://github.com/wolfgangspahn/solidjs-charts#readme",
  "bugs": {
    "url": "https://github.com/wolfgangspahn/solidjs-charts/issues"
  },
  "peerDependencies": {
    "chart.js": "^4.0.0",
    "solid-js": "^1.8.0"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.5",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^1.0.0",
    "chart.js": "^4.4.0",
    "eslint": "^8.0.0",
    "eslint-plugin-solid": "^0.13.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.0.0",
    "solid-js": "^1.8.5",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-solid": "^2.8.0",
    "vitest": "^1.0.0"
  }
}
